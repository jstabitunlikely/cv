{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "RenderCV",
            "type": "shell",
            "command": [
                "source ~/.pyenv/versions/$(pyenv local)/bin/activate &&",
                "rendercv render",
                "src/Gergo_Gacs_CV.yaml",
                "--markdown-path README.md",
            ],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "group": "RenderCV",
                "showReuseMessage": false,
                "focus": false
            }
        }
    ]
}